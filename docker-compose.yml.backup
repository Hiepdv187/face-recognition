version: "3.8"

services:
  face-recognition:
    build: .
    container_name: face_recognition_api
    restart: always
    volumes:
      - ./dataset:/app/dataset
      - ./embeddings:/app/embeddings
    ports:
      - "5000"

    depends_on:
      - postgres
    command: sleep infinity
    restart: always
      - "80:80"
    volumes:
